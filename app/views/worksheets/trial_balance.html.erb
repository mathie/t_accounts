<header>
  <h1 class="span-12"><%= @worksheet.name %> - Trial Balance</h1>
</header>

<nav id="worksheet-navigation">
  <ul class="tabs" aria-controls="worksheet-tab-content">
    <li><%= link_to 'Overview', @worksheet %></li>
    <li><%= link_to 'Transactions', worksheet_transactions_path(@worksheet) %></li>
    <li><%= link_to 'T Accounts', worksheet_accounts_path(@worksheet) %></li>
    <li class="active"><%= link_to 'Trial Balance', trial_balance_worksheet_path(@worksheet) %></li>

    <li class="dropdown" style="float:right">
      <a href="#" class="dropdown-toggle">Actions</a>
      <ul class="dropdown-menu">
        <li><%= link_to "New account", new_worksheet_account_path(@worksheet) %></li>
        <li><%= link_to "New transaction", new_worksheet_transaction_path(@worksheet) %></li>
        <li class="divider">--</li>
        <li><%= link_to "Edit worksheet", [:edit, @worksheet] %></li>
        <li><%= link_to "Delete worksheet", @worksheet, method: :delete, confirm: "Are you sure you want to delete the worksheet? You will lose all of the data associated with it." %></li>
      </ul>
    </li>
  </ul>
</nav>

<div class="tab-content" id="worksheet-tab-content">
  <section class="active" id="transactions">
    <%= render 'trial_balance', worksheet: @worksheet %>
  </section>
</div>
