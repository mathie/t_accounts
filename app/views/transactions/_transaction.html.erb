        <tr>
          <td>(<%= transaction.position %>)</td>
          <td><%= transaction.dated_on.to_s(:short) %></td>
          <td>
            <%= transaction.description %>
            (<%= transaction.credit_account.name %> -> <%= transaction.debit_account.name %>)
          </td>
          <td class="currency"><%= number_to_currency transaction.amount %></td>
          <td>
            <%= link_to 'Edit', edit_worksheet_transaction_path(@worksheet, transaction) %>
            <%= link_to 'Delete', worksheet_transaction_path(@worksheet, transaction), :method => :delete, :confirm => 'Are you sure you want to delete this transaction?' %>
          </td>
        </tr>
